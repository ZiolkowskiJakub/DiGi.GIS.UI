<Window x:Class="DiGi.GIS.UI.Application.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiGi.GIS.UI.Application"
        xmlns:Controls="clr-namespace:DiGi.UI.WPF.Core.Controls;assembly=DiGi.UI.WPF.Core"
        mc:Ignorable="d"
        Title="GIS" Height="293" Width="150" ResizeMode="NoResize">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Height="230">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="44*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Button_Convert" Content="Convert" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="130" Click="Button_Convert_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_Write" Content="Write" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" Width="130" Click="Button_Write_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_Read" Content="Read" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Width="130" Click="Button_Read_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_Analyse" Content="Analyse" HorizontalAlignment="Center" Margin="0,91,0,0" VerticalAlignment="Top" Width="130" Click="Button_Analyse_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_Calculate" Content="Calculate" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Width="130" Click="Button_Calculate_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_Reduce" Content="Reduce" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" Width="130" Click="Button_Reduce_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="Button_YearBuilts" Content="Year Builts" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Width="130" Click="Button_YearBuilts_Click" Grid.ColumnSpan="2"/>
        </Grid>
        <StatusBarItem DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock x:Name="TextBlock_Progress" Text="..." HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3,0,0,0"/>
        </StatusBarItem>
    </DockPanel>
</Window>
